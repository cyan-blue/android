<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_gridview_ItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/pictures_no" />

    <TextView
        android:id="@+id/product_gridview_ItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_gridview_ItemImage"
        android:text="松紧腰小脚加绒铅笔裤">
    </TextView>

    <TextView
        android:id="@+id/product_gridview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_gridview_ItemText"
        android:layout_centerHorizontal="true"
        android:textColor="#FF3300"
        android:text="¥ 79.9">
    </TextView>
</LinearLayout>